<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".PackageFragment">
<androidx.constraintlayout.widget.ConstraintLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:id="@+id/select_package"
        android:layout_width="wrap_content"
        android:layout_height="250dp"
        android:src="@drawable/selectyourpackage"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />
    <androidx.cardview.widget.CardView
        android:id="@+id/basic_plan"
        android:backgroundTint="@color/light_gray"
        android:layout_marginTop="45sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/select_package"
        android:layout_width="match_parent"
        android:layout_marginHorizontal="30dp"
        app:cardCornerRadius="22sp"
        android:layout_height="100dp">
<TextView
    android:layout_marginTop="15dp"
    android:layout_marginStart="15dp"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:text="Basic Plan"
    style="bold"
    android:textSize="30dp"/>
        <TextView
            android:backgroundTint="@color/dark_green"
            android:layout_marginTop="65dp"
            android:layout_marginStart="15dp"
            android:textSize="20dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="1000 W"/>

        <TextView
            android:layout_marginTop="15dp"
            android:layout_marginStart="200dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="$3000/Month"
            style="bold"
            android:textSize="23dp"/>

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="200dp"
            android:layout_marginTop="48dp"
            android:text="subscribe"
            android:backgroundTint="@color/dark_green"
            android:textSize="18dp"
            android:textColor="@color/black"
            />

    </androidx.cardview.widget.CardView>
    <androidx.cardview.widget.CardView
        android:id="@+id/Advanced_plan"
        android:backgroundTint="@color/light_gray"
        android:layout_marginTop="45sp"
        app:layout_constraintStart_toStartOf="@id/basic_plan"
        app:layout_constraintTop_toBottomOf="@id/basic_plan"
        android:layout_width="match_parent"
        android:layout_marginHorizontal="30dp"
        app:cardCornerRadius="22sp"
        android:layout_height="100dp">
        <TextView
            android:layout_marginTop="15dp"
            android:layout_marginStart="15dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Advanced Plan"
            style="bold"
            android:textSize="25dp"/>
        <TextView
            android:backgroundTint="@color/dark_green"
            android:layout_marginTop="65dp"
            android:layout_marginStart="15dp"
            android:textSize="20dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="2500 W"/>

        <TextView
            android:layout_marginTop="15dp"
            android:layout_marginStart="200dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="$6000/Month"
            style="bold"
            android:textSize="23dp"/>

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="200dp"
            android:layout_marginTop="48dp"
            android:text="subscribe"
            android:backgroundTint="@color/dark_green"
            android:textSize="18dp"
            android:textColor="@color/black"
            />

    </androidx.cardview.widget.CardView>
    <androidx.cardview.widget.CardView
        android:id="@+id/Primmum_plan"
        android:backgroundTint="@color/light_gray"
        android:layout_marginTop="45sp"
        app:layout_constraintStart_toStartOf="@id/Advanced_plan"
        app:layout_constraintTop_toBottomOf="@id/Advanced_plan"
        android:layout_width="match_parent"
        android:layout_marginHorizontal="30dp"
        app:cardCornerRadius="22sp"
        android:layout_height="100dp">
        <TextView
            android:layout_marginTop="15dp"
            android:layout_marginStart="15dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Primmum Plan"
            style="bold"
            android:textSize="25dp"/>
        <TextView
            android:backgroundTint="@color/dark_green"
            android:layout_marginTop="65dp"
            android:layout_marginStart="15dp"
            android:textSize="20dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="4000 W"/>

        <TextView
            android:layout_marginTop="15dp"
            android:layout_marginStart="200dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="$9000/Month"
            style="bold"
            android:textSize="23dp"/>

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="200dp"
            android:layout_marginTop="48dp"
            android:text="subscribe"
            android:backgroundTint="@color/dark_green"
            android:textSize="18dp"
            android:textColor="@color/black"
            />

    </androidx.cardview.widget.CardView>

    <TextView
        app:layout_constraintTop_toBottomOf="@id/Primmum_plan"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginStart="100dp"
        android:id="@+id/registerPrompt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:text="Already have account ? Login Here"
        android:textStyle="bold" />
</androidx.constraintlayout.widget.ConstraintLayout>




</FrameLayout>