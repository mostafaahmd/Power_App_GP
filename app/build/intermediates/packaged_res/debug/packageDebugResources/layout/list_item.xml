<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    style="@style/CustomCardCorners"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginHorizontal="22dp"
    android:layout_marginVertical="180dp"
    android:layout_marginTop="11dp"
    android:layout_marginBottom="44dp"
    android:backgroundTint="@color/gray"
    app:cardCornerRadius="44dp"
    app:cardElevation="50dp"
    app:strokeColor="@color/black"
    app:strokeWidth="3dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

                <TextView
                    android:id="@+id/text_view"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="22dp"
                    android:layout_marginTop="22dp"
                    android:layout_marginEnd="22dp"
                    android:text="Your Plan :"
                    android:textColor="@color/light_gray"
                    android:textSize="30dp"
                    android:textStyle="bold" />

                <ImageView
                    android:layout_width="90dp"
                    android:layout_height="90dp"
                    android:layout_marginStart="140dp"
                    android:layout_marginTop="100dp"
                    android:src="@drawable/powericon" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="22dp"
                    android:layout_marginTop="22dp"
                    android:layout_toEndOf="@id/text_view"
                    android:text="First Plan"
                    android:textColor="@color/light_gray"
                    android:textSize="30dp"
                    android:textStyle="bold"
                    />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="150dp"
                    android:layout_marginTop="190dp"
                    android:text="75%"
                    android:textColor="@color/black"
                    android:textSize="44dp" />

                <ProgressBar

                    android:id="@+id/offer_progress"
                    style="@style/Widget.AppCompat.ProgressBar.Horizontal"
                    android:layout_width="250dp"
                    android:layout_height="250dp"
                    android:layout_marginStart="60dp"
                    android:layout_marginTop="55dp"
                    android:background="@drawable/circle_shape"
                    android:indeterminate="false"
                    android:progress="75"
                    android:progressDrawable="@drawable/circular_progressbar"
                    android:visibility="visible" />

                <androidx.cardview.widget.CardView
                    android:layout_width="350dp"
                    android:layout_height="55dp"
                    android:layout_below="@id/offer_progress"
                    android:layout_marginStart="10dp"
                    android:backgroundTint="@color/brown"
                    app:cardCornerRadius="55dp">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="33dp"
                            android:layout_marginTop="15dp"
                            android:text="55 EG"
                            android:textColor="@color/gray"
                            android:textSize="25dp" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="150dp"
                            android:layout_marginTop="15dp"
                            android:text="Recharge Now"
                            android:textColor="@color/gray"
                            android:textSize="25dp" />
                </androidx.cardview.widget.CardView>

        </RelativeLayout>

</com.google.android.material.card.MaterialCardView>