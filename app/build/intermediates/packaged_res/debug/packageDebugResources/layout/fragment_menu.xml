<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/Home_Fragment"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".HomeFragment">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">>


        <com.google.android.material.card.MaterialCardView
            android:id="@+id/card_view"
            style="@style/CustomCardCorners"
            android:layout_width="match_parent"
            android:layout_height="150dp"
            android:backgroundTint="@color/green"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <androidx.cardview.widget.CardView
                android:id="@+id/card_image"
                style="@style/CustomCardCorners"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <ImageView
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:background="@drawable/circle_background"
                    android:src="@drawable/boy" />

            </androidx.cardview.widget.CardView>


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="150dp"
                android:layout_marginTop="45dp"
                android:text="Welcome Ali"
                android:textSize="26sp" />
        </com.google.android.material.card.MaterialCardView>

        <com.google.android.material.card.MaterialCardView
            android:id="@+id/editPersonalInfoButton"
            android:layout_width="300dp"
            android:layout_height="56dp"
            app:strokeColor="@color/black"
            app:strokeWidth="2dp"
            android:layout_marginStart="55dp"
            android:layout_marginTop="50dp"
            android:layout_marginBottom="112dp"
            android:backgroundTint="@color/gray"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/card_view" >

            <ImageView
                android:layout_width="35dp"
                android:layout_height="35dp"
                android:layout_marginStart="11dp"
                android:src="@drawable/edit_eeltical_devices"
                android:layout_marginTop="8dp"/>
            <TextView
                android:layout_width="250dp"
                android:layout_marginVertical="15dp"
                android:layout_height="50dp"
                android:layout_marginStart="60dp"
                android:text="Edit Personal Information"
                android:textSize="19sp"
                />

        </com.google.android.material.card.MaterialCardView>

        <com.google.android.material.card.MaterialCardView
            android:id="@+id/editelictericaldevices"
            android:layout_width="300dp"
            android:layout_height="56dp"
            app:strokeColor="@color/black"
            app:strokeWidth="2dp"
            android:layout_marginStart="55dp"
            android:layout_marginTop="50dp"
            android:layout_marginBottom="112dp"
            android:backgroundTint="@color/gray"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/editPersonalInfoButton" >

            <ImageView
                android:layout_width="35dp"
                android:layout_height="35dp"
                android:layout_marginStart="11dp"
                android:src="@drawable/plug"
                android:layout_marginTop="8dp"/>
            <TextView
                android:layout_width="250dp"
                android:layout_marginVertical="15dp"
                android:layout_height="50dp"
                android:layout_marginStart="60dp"
                android:text="Edit Electrical devices"
                android:textSize="19sp"
                />

        </com.google.android.material.card.MaterialCardView>

        <com.google.android.material.card.MaterialCardView
            android:id="@+id/ContactWithUs"
            android:layout_width="300dp"
            android:layout_height="56dp"
            app:strokeColor="@color/black"
            app:strokeWidth="2dp"
            android:layout_marginStart="55dp"
            android:layout_marginTop="50dp"
            android:layout_marginBottom="112dp"
            android:backgroundTint="@color/gray"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/editelictericaldevices" >

            <ImageView
                android:layout_width="35dp"
                android:layout_height="35dp"
                android:src="@drawable/telephone"
                android:layout_marginStart="11dp"
                android:layout_marginTop="8dp"/>
            <TextView
                android:layout_width="250dp"
                android:layout_marginVertical="15dp"
                android:layout_height="50dp"
                android:layout_marginStart="60dp"
                android:text="Contact With Us"
                android:textSize="19sp"
                />

        </com.google.android.material.card.MaterialCardView>

        <com.google.android.material.card.MaterialCardView
            android:id="@+id/LogOut"
            android:layout_width="300dp"
            android:layout_height="56dp"
            app:strokeColor="@color/black"
            app:strokeWidth="2dp"
            android:layout_marginStart="55dp"
            android:layout_marginTop="50dp"
            android:layout_marginBottom="112dp"
            android:backgroundTint="@color/gray"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/ContactWithUs" >

            <ImageView
                android:layout_width="35dp"
                android:layout_height="35dp"
                android:src="@drawable/exit"
                android:layout_marginStart="11dp"
                android:layout_marginTop="8dp"/>
            <TextView
                android:layout_width="250dp"
                android:layout_marginVertical="15dp"
                android:layout_height="50dp"
                android:layout_marginStart="60dp"
                android:text="Edit Personal Information"
                android:textSize="19sp"
                />

        </com.google.android.material.card.MaterialCardView>


    </androidx.constraintlayout.widget.ConstraintLayout>


</FrameLayout>